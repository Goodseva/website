---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Hero from '../components/sections/Hero.astro';
import Features from '../components/sections/Features.astro';
import UserTypes from '../components/sections/UserTypes.astro';
import HowItWorks from '../components/sections/HowItWorks.astro';
import TrustIndicators from '../components/sections/TrustIndicators.astro';
import CallToAction from '../components/sections/CallToAction.astro';
---

<BaseLayout
  title="Goodseva - Connect Shippers with Carriers | Modern Logistics Platform"
  description="Modern logistics platform with real-time bidding, GPS tracking, and secure payments. Connect shippers with carriers across India. Join 10,000+ shippers and 50,000+ carriers."
>
  <Header />

  <main>
    <Hero />
    <Features />
    <UserTypes />
    <HowItWorks />
    <TrustIndicators />
    <CallToAction />
  </main>

  <Footer />
</BaseLayout>
