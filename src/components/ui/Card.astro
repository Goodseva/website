---
interface Props {
  class?: string;
  hover?: boolean;
}

const { class: className = '', hover = true } = Astro.props;

const hoverClass = hover ? 'hover:shadow-xl hover:-translate-y-1' : '';
const classes = `bg-white rounded-xl p-6 shadow-md transition-all duration-300 ${hoverClass} ${className}`;
---

<div class={classes}>
  <slot />
</div>
